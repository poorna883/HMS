<% include partials/header%>
<div class="ui inverted container">
	
<div class="ui form" style="margin-top:80px;">
	<h4 class="ui center aligned dividing huge header">Edit <%= Doc.name %> Details</h4>
<div class="field">

<div style="width:30% ;margin:25px auto">
<form action="/docs/<%= Doc._id %>?_method=PUT" method="POST">
<div class="field"><input  type="text"
name="Doc[name]" id="name" value="<%= Doc.name %>" placeholder="Name" required>
		</div>
	
<div class="field">
    <div class="fields">
      <div class="twelve wide field">
      <input type="text" id="age" name="Doc[age]" value="<%= Doc.age %>" placeholder="Age" pattern="[0-9]{2}" title="please enter valid age" required>
    </div>
      <select  class="ui fluid dropdown" id="inputState"  name="Doc[gender]" value="<%= Doc.gender %>"  >
      	<option class="default text">Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>

 <div class="field">
    <input type="text" name="Doc[department]"  value="<%= Doc.department %>" id="dep" placeholder="Department" required>
 </div>
	<div class="field">
    <input type="text" name="Doc[designation]"  value="<%= Doc.designation %>" id="des" placeholder="Designation" required>
 </div>
 <div class="field">
    <input type="text" name="Doc[experience]"  value="<%= Doc.experience %>" id="exp" placeholder="Experience" required>
 </div>
	<div class="field">
    <input type="text" name="Doc[address]"  value="<%= Doc.address %>" id="inputAddress" placeholder="Address" required>
  </div>

<div class="field">
    <input type="text" name="Doc[phone]" value="<%= Doc.phone %>" id="phno" pattern="[0-9]{10}" placeholder="Phone Number" title="please enter a valid number" required>
  </div>
	 <div class="field">
			 <label>About</label>
			 <textarea name="Doc[about]"><%= Doc.about %></textarea>
	</div>

	
	<div class="ui center aligned container">
		<div class="field"><button class="ui green basic button ">Update</button></div> </div>
	</div>
	
	</form>
	</div>
	</div>
	</div>
</div>
<% include partials/footer%>